{
  "name": "giacomocerquone.com",
  "version": "1.0.0",
  "description": "My website",
  "scripts": {
    "start": "concurrently \"npm run browsersync\" \"npm run watch\" ",
    "watch": "onchange \"src/**/*.*\" -- npm run build",
    "build": "concurrently \"npm run build:js\" \"npm run build:less\"",
    "build:js": "uglifyjs src/js/script.js --compress --mangle --output assets/js/script.min.js",
    "build:less": "lessc --clean-css src/less/style.less assets/css/style.min.css",
    "browsersync": "browser-sync start --no-notify --server --files \"assets/less/*.less\" \"assets/js/*.js\" \"index.html\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/giacomocerquone/giacomocerquone.com.git"
  },
  "author": "Giacomo Cerquone <cerquone96@hotmail.it> (http://giacomocerquone.com)",
  "devDependencies": {
    "browser-sync": "^2.13.0",
    "less": "^2.7.1",
    "less-plugin-clean-css": "^1.5.1",
    "onchange": "^2.5.0",
    "uglify-js": "^2.6.2"
  },
  "dependencies": {
    "concurrently": "^3.5.0"
  }
}
